{
  "name": "weekly-blog",
  "version": "1.0.0",
  "description": "A modern full-stack blog with CMS built using Strapi and Next.js",
  "main": "index.js",
  "scripts": {
    "start": "sh -c \"cd backend && npm start\"",
    "develop": "sh -c \"cd backend && npm run develop\"",
    "build": "sh -c \"cd backend && npm ci --omit=dev && npm run build\"",
    "postinstall": "sh -c \"cd backend && npm ci --omit=dev\"",
    "frontend:dev": "sh -c \"cd frontend && npm run dev\"",
    "frontend:build": "sh -c \"cd frontend && npm run build\"",
    "frontend:start": "sh -c \"cd frontend && npm start\""
  },
  "keywords": [
    "blog",
    "cms",
    "strapi",
    "nextjs",
    "fullstack"
  ],
  "author": "Weekly Blog",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0 <=20.x.x",
    "npm": ">=6.0.0"
  }
}